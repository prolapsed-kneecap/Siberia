<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FieldBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout"
        android:layout_width="168dp"
        android:layout_height="219dp"
        android:layout_marginEnd="200dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <ImageView
            android:id="@+id/field1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/field" />
        <TextView
            android:id="@+id/field1txt"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Pole 1"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@color/semi_trans"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout2"
        android:layout_width="168dp"
        android:layout_height="219dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <ImageView
            android:id="@+id/field2"
            android:layout_width="168dp"
            android:layout_height="219dp"
            android:scaleType="centerCrop"
            android:src="@drawable/field" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/field2txt"
            android:layout_height="25dp"
            android:text="Pole 2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/semi_trans"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout3"
        android:layout_width="168dp"
        android:layout_height="219dp"
        android:layout_marginEnd="200dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.1">

        <ImageView
            android:id="@+id/field3"
            android:layout_width="168dp"
            android:layout_height="219dp"
            android:scaleType="centerCrop"
            android:src="@drawable/field" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/field3txt"
            android:layout_height="25dp"
            android:text="Pole 3"
            android:textAlignment="center"
            android:background="@color/semi_trans"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout4"
        android:layout_width="168dp"
        android:layout_height="219dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.1">

        <ImageView
            android:id="@+id/field4"
            android:layout_width="168dp"
            android:layout_height="219dp"
            android:scaleType="centerCrop"
            android:src="@drawable/field" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/field4txt"
            android:layout_height="25dp"
            android:text="Pole 4"
            android:textAlignment="center"
            android:background="@color/semi_trans"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/monthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="*Месяц не указан*"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.536" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="41dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/rewindButton"
        android:clickable="true"
        app:fabCustomSize="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/ic_baseline_fast_forward_24" />

</androidx.constraintlayout.widget.ConstraintLayout>